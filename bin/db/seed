#! /usr/bin/bash

CYAN='\033[1;36m'
NO_COLOR='\033[0m'
LABEL="db-seed-load"
printf "${CYAN}== ${LABEL}${NO_COLOR}\n"

seed_path="$(realpath .)/db/seed.sql"

if [ "$1" = "prod" ]; then
  echo "Running in Prod"
  CONN_URL=$PROD_CONNECTION_URL
else
    echo "Running in Dev"
  CONN_URL=$CONNECTION_URL
fi

psql $CONN_URL cruddur < $seed_path